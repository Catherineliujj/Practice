<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/include_top_lin_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/include_top_view_margin25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/include_top_lin_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--android:background="@drawable/ac_top"-->


        <!--<RelativeLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1">-->
        <!--<ImageView-->
        <!--android:id="@+id/include_top_iv_back"-->
        <!--android:layout_width="@dimen/dp40"-->
        <!--android:layout_height="@dimen/dp40"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:padding="@dimen/dp10"-->
        <!--android:clickable="false"-->
        <!--android:adjustViewBounds="true"-->
        <!--app:srcCompat="@drawable/to_left"-->
        <!--android:focusable="false"-->
        <!--/>-->
        <LinearLayout
            android:id="@+id/include_top_lin_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp45"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/include_top_iv_back"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/dp10"
                app:srcCompat="@drawable/to_left" />

        </LinearLayout>
        <!--</RelativeLayout>-->


        <TextView
            android:id="@+id/include_top_tv_title"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/sp12"
            android:autoSizeMaxTextSize="@dimen/sp18"
            android:textColor="@color/grey333"
            android:textSize="@dimen/sp18" />

        <LinearLayout
            android:id="@+id/include_top_lin_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/include_top_iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dp10"
                    app:srcCompat="@drawable/switch_theme"
                    />

                <TextView
                    android:id="@+id/include_top_tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/dp10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>