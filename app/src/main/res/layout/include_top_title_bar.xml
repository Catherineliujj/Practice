<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/include_top_view_height_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp20"
        android:background="@color/app_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/app_theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/include_top_iv_left"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:padding="@dimen/dp15"
            android:src="@drawable/to_left" />

        <TextView
            android:id="@+id/include_top_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/include_top_title_bar_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp22" />

        <ImageView
            android:id="@+id/include_top_iv_right"
            android:layout_width="@dimen/dp60"
            android:layout_height="match_parent"
            android:padding="@dimen/dp15"
            android:src="@drawable/more_about"
            android:visibility="gone" />

        <TextView
            android:id="@+id/include_top_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="@string/include_top_title_bar_jump_over"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

</LinearLayout>