<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main_code.about_ebbinghaus.EbbinghausActivity">

    <include layout="@layout/activity_include_top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/white"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--计划名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划名"
                    android:textColor="@color/grey333"
                    />

                <EditText
                    android:id="@+id/ebhs_ed_plan_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <!--列表名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List名"
                    android:textColor="@color/grey333"
                    />

                <EditText
                    android:id="@+id/ebhs_ed_table_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <!--开始日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始日期"
                    android:textColor="@color/grey333"
                    />

                <TextView
                    android:id="@+id/ebhs_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_stroke_grey333"
                    android:padding="@dimen/dp10"
                    android:text="请点击选择日期"
                    android:layout_marginTop="@dimen/dp10"
                    />
                <TextView
                    android:id="@+id/ebhs_tv_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redef"
                    android:layout_marginTop="@dimen/dp5"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dp10"
                    />
            </LinearLayout>

            <!--每天计划量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每天计划量"
                    android:textColor="@color/grey333"
                    />

                <EditText
                    android:id="@+id/ebhs_ed_plan_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <!--计划总量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划总量"
                    android:textColor="@color/grey333"
                    />

                <EditText
                    android:id="@+id/ebhs_ed_plan_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/ebhs_tv_make_table"
                android:layout_width="@dimen/dp300"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/btn_shape_theme"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:text="生成计划表"
                />

            <TextView
                android:id="@+id/ebhs_tv_plan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/grey333"
                android:textSize="@dimen/sp20"
                android:layout_marginTop="@dimen/dp20"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="@dimen/dp10"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ebhs_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/ebhs_tv_make_pdf"
                android:layout_width="@dimen/dp300"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/btn_shape_theme"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:text="生成PDF文件"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>