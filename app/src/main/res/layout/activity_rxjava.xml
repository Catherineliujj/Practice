<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".main_code.aboutt_retrofit_and_rxjava.RetrofitAndRxJavaActivity">

    <include layout="@layout/activity_include_top_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_show_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/dp20"
            android:textColor="@color/black_transparent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0_5"
            android:background="@color/black_trans"
            android:layout_margin="@dimen/dp20"
            />

        <TextView
            android:id="@+id/tv_show_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:gravity="center"
            android:textColor="@color/black_transparent"
            />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/black_transparent"
            android:textColor="@color/white"
            android:text="@string/rxjava_btn"
            />

    </LinearLayout>
</LinearLayout>