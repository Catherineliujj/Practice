<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".main_code.about_download_file.DownloadFileActivity">

    <include layout="@layout/activity_include_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_stroke_pinkf8"
            android:text="开始下载"
            android:textColor="@color/white"
            android:padding="@dimen/dp10"
            />
        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_stroke_pinkf8"
            android:text="取消下载"
            android:textColor="@color/white"
            android:padding="@dimen/dp10"
            android:layout_margin="@dimen/dp30"
            />

        <ProgressBar
            android:id="@+id/progressbar_download"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp6"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginRight="@dimen/dp24"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="@dimen/dp10"
            android:progressDrawable="@drawable/progress_bar_style"
            />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/grey666"
            android:layout_marginTop="@dimen/dp20"
            android:textSize="@dimen/sp16"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_current_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey666"
                android:textSize="@dimen/sp16"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/tv_total_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey666"
                android:textSize="@dimen/sp16"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>