<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main_code.about_list_select_all.ListSelectAllActivity">

    <include layout="@layout/activity_include_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_select_all_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:layout_weight="1"
            android:padding="@dimen/dp10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/list_select_all_btn_select_all"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:background="@drawable/shape_rec_theme"
                android:padding="@dimen/dp10"
                android:text="全选"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/dp20"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/list_select_all_btn_select_none"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:background="@drawable/shape_rec_theme"
                android:text="全不选"
                android:layout_weight="1"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/list_select_all_btn_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:background="@drawable/shape_rec_theme"
                android:padding="@dimen/dp10"
                android:text="确定"
                android:layout_margin="@dimen/dp20"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/list_select_all_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp20"
            android:textColor="@color/grey666"
            />
    </LinearLayout>

</LinearLayout>